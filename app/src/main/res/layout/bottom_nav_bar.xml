<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Home -->
    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivNavHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_home"
            app:tint="#6B00FF" />

        <TextView
            android:id="@+id/tvNavHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Home"
            android:textColor="#6B00FF"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Locate -->
    <LinearLayout
        android:id="@+id/navLocate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivNavLocate"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location"
            app:tint="#666666" />

        <TextView
            android:id="@+id/tvNavLocate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Locate"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- My Vehicles -->
    <LinearLayout
        android:id="@+id/navVehicles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivNavVehicles"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_vehicles"
            app:tint="#666666" />

        <TextView
            android:id="@+id/tvNavVehicles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="My Vehicles"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Fuel Calculator -->
    <LinearLayout
        android:id="@+id/navCalculator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivNavCalculator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calculator"
            app:tint="#666666" />

        <TextView
            android:id="@+id/tvNavCalculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fuel Calculator"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
